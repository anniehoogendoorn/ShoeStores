<html>
    <head>

        <title>Local Shoe Stores</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class='container'>
            <h1>Local Shoe Stores</h1>

            {% if stores is not empty %}
                <p>Here are all of your shoe stores:</p>
                <ul>
                    {% for store in stores %}
                        <li><a href="/store/{{ store.getId }}">{{ store.getName }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>You have no stores yet!</p>
            {% endif %}

            <h3>Add a new store:</h3>

            <form action="/shoe_stores" method="post">
                <div class='form-group'>
                    <label for="name">Store name:</label>
                    <input id="name" name="name" class='form-control' type="text">
                </div>
                <button type="submit" class='btn btn-warning'>Add Store</button>
            </form>

            <form action='/delete_stores' method='post'>
                <button type='submit' class='btn btn-danger'>Clear All </button>
            </form>

        </div>
    </body>
</html>
