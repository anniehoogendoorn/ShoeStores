<html>
    <head>

        <title>Local Shoe Stores</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class='container'>
            <h1>Local Shoe Stores and Brands</h1>

            {% if stores is not empty %}
                <p>Here are all of your shoe stores:</p>
                <ul>
                    {% for store in stores %}
                        <li><a href="/store/{{ store.getId }}">{{ store.getName }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>You have no stores yet!</p>
            {% endif %}

            <h3>Add a new store:</h3>

            <form action="/add_store" method="post">
                <div class='form-group'>
                    <label for="name">Store name:</label>
                    <input id="name" name="name" class='form-control' type="text">
                </div>
                <button type="submit" class='btn btn-warning'>Add Store</button>
            </form>

            <form action='/delete_stores' method='post'>
                <button type='submit' class='btn btn-danger'>Clear All </button>
            </form>

            {% if brands is not empty %}
                <p>Here are all of your brands:</p>
                    <ul>
                        {% for brand in brands %}
                            <li><a href='/brands/{{ brand.getId }}'>{{ brand.getName }}</a></li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>You have no brands yet!</p>
            {% endif %}

            <h3>Add a brand:</h3>

                <form action='/brands' method='post'>
                    <div class='form-group'>
                        <input id='store_id' name='store_id' type='hidden' value='{{ store.getId }}'>
                        <label for='name'>Brand Name</label>
                        <input id='name' name='name' class='form-control' type='text'>
                    </div>

                    <button type='submit' class='btn btn-info'>Add brand</button>
                </form>



        </div>
    </body>
</html>
