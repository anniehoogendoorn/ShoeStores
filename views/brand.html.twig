<html>
    <head>
        <title></title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
            <h1>Brand {{ brand.getName }}</h1>

            {% if stores is not empty %}
                <p>This brand is offered at the following stores:</p>
                <ul>
                    {% for store in stores %}
                        <li><a href='/store/{{ store.getId }}'>{{ store.getName }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}

            <form action='/store/{id}/add_brand' method='post'>
                <div class='form-group'>
                    <input id='store_id' name='store_id' type='hidden' value='{{ store.getId }}'>
                    <label for='brand_id'>Add a brand</label>
                    <select id='brand_id' name='name' class='selectpicker' type='text'>
                        {% for brand in brands %}
                            <option value='{{ brand.getId }}'>{{ brand.getName }}</option>
                        {% endfor %}
                    </select>
                </div>


                <button type='submit' class='btn btn-info'>Add</button>
            </form>



            <p><a href='/'>Home</a></p>
        </div>

    </body>
</html>
